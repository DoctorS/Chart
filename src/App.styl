fontFamily = Ubuntu, Tahoma, sans-serif
*
  margin: 0
  padding: 0
  box-sizing border-box

html, body
  width: 100%
  height: 100%

body
  padding: 20px 40px
  font-family: fontFamily
  background: #fff
  color #666
  font-size: 14px
  line-height: 18px


h1, h2, h3
  margin-bottom: 15px

nav
  margin-bottom: 20px

  ul
    li
      font-size: 15px
      line-height: 26px

a
  color blue

div, p
  margin-bottom: 10px

form
  margin-bottom: 20px

  button
    margin-bottom: 15px

button, input
  font-family: fontFamily
  margin-right: 2px
  line-height: 26px
  padding: 0 6px
  font-size: 15px
  border: 1px solid #ccc
  border-radius 2px
  outline: none
  color #666

  &:focus
    outline: none

button
  cursor: pointer
  padding: 0 13px

.email
  color #ff6312

.ok
  color #14807a

.error
  color #ff461d

h1
  margin-bottom: 20px

#chart_div
  width: 100%
  min-height: 500px
  max-height: 1500px

.select-period
  display: inline-block
  width: 100%
  margin-bottom: 15px

  li
    list-style none
    float: left

    button
      cursor: pointer
      min-width: 74px
      user-select none

    .active
      background: #ccc

text
  font-family fontFamily
